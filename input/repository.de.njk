<h2 class="repo-title">Repository</h2>
<p class="repo-description">
  W√§hlen Sie Korpora/Datasets zum Herunterladen aus. Einige Datens√§tze sind nur f√ºr authentifizierte Nutzer:innen von deutschen Hochschulen zug√§nglich.
</p>

<!-- Authentication Button -->
<button class="auth-btn">Authentifizieren (Demo)</button>

<!-- Search Bar -->
<input type="text" id="searchInput" placeholder="Korpora durchsuchen..." class="search-bar">

<!-- Enhanced Filter Bar -->
<div class="filter-bar-enhanced">
  <div class="filter-group-enhanced">
    <div class="filter-item">
      <label for="accessFilter">Zugriff:</label>
      <select id="accessFilter" onchange="filterTable()">
        <option value="all">Alle</option>
        <option value="open">Open</option>
        <option value="closed">Closed</option>
        <option value="restricted">Restricted</option>
        <option value="special restrictions">Special Restrictions</option>
      </select>
    </div>

    <div class="filter-item">
      <label for="l1Filter">L1:</label>
      <select id="l1Filter" onchange="filterTable()">
        <option value="all">Alle</option>
        <option value="mono">Mono</option>
        <option value="multi">Multi</option>
      </select>
    </div>

    <div class="filter-item">
      <label for="modalityFilter">Modalit√§t:</label>
      <select id="modalityFilter" onchange="filterTable()">
        <option value="all">Alle</option>
        <option value="written">Written</option>
        <option value="spoken">Spoken</option>
      </select>
    </div>
  </div>
</div>

{% set tableKeys = [
  "corpus_admin_name",
  "corpus_subcorpus_signet",
  "corpus_admin_acronym",
  "corpus_admin_availability",
  "corpus_design_l1Type",
  "corpus_proficiency_levelMax",
  "corpus_proficiency_levelMin",
  "corpus_subcorpus_sizeLearners",
  "task_interaction_mode",
  "ANNOTATION"
] %}

<!-- Repository Table -->
<table class="repo-table">
  <thead>
    <tr>
      {% for key in tableKeys %}
        {% set display = displaynames[key] or key %}
        <th title="{{ key }}">{{ display | truncate(35, true, '...') }}</th>
      {% endfor %}
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    {% for corpus in collections.corporaPages %}
      {% if corpus.data.language == "de" %}
      <tr>
        {% for key in tableKeys %}
          {% if key == "corpus_admin_name" %}
            <td class="
              {% if corpus.data.corpus_admin_availability == 'open' %}access-open
              {% elif corpus.data.corpus_admin_availability == 'closed' %}access-closed
              {% elif corpus.data.corpus_admin_availability == 'restricted' %}access-restricted
              {% elif corpus.data.corpus_admin_availability == 'special restrictions' %}access-special
              {% endif %}">
              <a href="/repository/{{ corpus.fileSlug }}/index.de.html" title="{{ corpus.title }}">
               {{ corpus.title | truncateTitle(35) }}
              </a>
            </td>
          {% elif key == "ANNOTATION" %}
            <td><!-- Annotationen --></td>
          {% else %}
            <td>{{ corpus.data[key] or "" }}</td>
          {% endif %}
        {% endfor %}
        <td>
          <div class="dropdown">
            <button class="dropdown-btn">üì•</button>
            <div class="dropdown-content">
              <a href="/data/{{ corpus.fileSlug }}/corpus.zip">ZIP</a>
              <a href="/data/{{ corpus.fileSlug }}/corpus.xlsx">Excel</a>
              <a href="/data/{{ corpus.fileSlug }}/corpus.txt">Text</a>
              <a href="/data/{{ corpus.fileSlug }}/corpus.xmi">XMI</a>
            </div>
          </div>
        </td>
      </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>

<script>
function filterTable() {
  const access = document.getElementById("accessFilter").value.toLowerCase();
  const l1 = document.getElementById("l1Filter").value.toLowerCase();
  const modality = document.getElementById("modalityFilter").value.toLowerCase();

  const rows = document.querySelectorAll(".repo-table tbody tr");

  rows.forEach(row => {
    const accessText = row.children[3].textContent.trim().toLowerCase();
    const l1Text = row.children[4].textContent.trim().toLowerCase();
    const modalityText = row.children[8].textContent.trim().toLowerCase();

    const accessMatch = access === "all" || accessText === access;
    const l1Match = l1 === "all" || l1Text === l1;
    const modalityMatch = modality === "all" || modalityText === modality;

    row.style.display = (accessMatch && l1Match && modalityMatch) ? "" : "none";
  });
}
</script>
